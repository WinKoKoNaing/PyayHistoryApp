<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin">

        <ImageView
            android:id="@+id/ivArticleImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/article_image"
            android:scaleType="centerInside"
            android:src="@drawable/pyay" />
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvDateTime"
            android:layout_alignParentTop="true"
            android:paddingStart="10dp"
            android:layout_toEndOf="@id/ivArticleImage"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="The second point is important. Even if you do not use the compat vector functionality yourself, you need to follow this post as if you do, since AppCompat requires it." />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/tvCategory"
            android:fontFamily="@font/roboto"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@android:color/darker_gray"
            tools:text="Sun, 05 Dec 15" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:fontFamily="@font/roboto"
            android:textAllCaps="true"
            android:paddingStart="10dp"
            android:layout_toEndOf="@id/ivArticleImage"
            android:textColor="@android:color/darker_gray"
            tools:text="POGODA" />
    </RelativeLayout>

</LinearLayout>
